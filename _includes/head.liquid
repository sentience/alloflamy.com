<head>
  <meta charset="utf-8">
  <title>{{ title | default: site.name }}</title>
  <meta name="description" content="{{ site.description }}">
  <link
    rel="canonical"
    href="{{ site.url }}{{ page.url | replace:'index.html','' }}"
  >
  <link rel="icon" type="image/png" href="/assets/images/lamy-vintage-icon-32.png">
  <link rel="icon" type="image/svg+xml" href="/assets/images/lamy-vintage-icon-144.svg">
  <link
    rel="apple-touch-icon-precomposed"
    type="image/png"
    sizes="144x144"
    href="/assets/images/lamy-vintage-icon-144.png"
  >
  <link rel="stylesheet" href="/assets/styles/styles.css">
  {% for stylesheet in stylesheets %}
    <link rel="stylesheet" media="(prefers-color-scheme: light)" href="{{ stylesheet.light }}">
    <link rel="stylesheet" media="(prefers-color-scheme: dark)" href="{{ stylesheet.dark }}">
  {% endfor %}
  {% for script in scripts %}
    {% if script.src %}
      <script src="{{ script.src }}"></script>
    {% endif %}
    {% if script.inline %}
      {% raw %}<script>{% endraw %}
      {{- script.inline -}}
      {% raw %}</script>{% endraw %}
    {% endif %}
  {% endfor %}

  <!-- browser-specific options -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#000000">

  <link
    rel="alternate"
    type="application/rss+xml"
    title="{{ site.name }}"
    href="/feed.xml"
  >

  <script defer src="/assets/scripts/nav-menu.js"></script>
</head>
